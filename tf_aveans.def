%environment
	export PATH="/usr/local/bin/code-server-4.7.1-linux-amd64/bin:$PATH"
	export BASH_ENV="/home/aevans/.bashrc"
	#source /home/aevans/.bashrc

#post section pops into the container and runs below commands
